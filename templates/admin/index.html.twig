{% extends 'base.html.twig' %}
{% block stylesheets %} {{ parent() }} {% endblock %}
{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% block navbar %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home')}}">Home <span class="sr-only">(current)</span></a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Conference
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('conferenceVoted',{'id':app.user.id}) }}">Conference voted</a>
                            <a class="dropdown-item" href="{{ path('conferenceNotVoted',{'id':app.user.id}) }}">Conference not voted</a>
                            <a class="dropdown-item" href="{{ path('addConference',{'id':app.user.id})}}">Soumettre Conference</a>
                        </div>
                    </li>
                    {% endif %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Sign
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <a class="dropdown-item" href="{{ path('logout')}}">Log Out</a>
                            {% else %}
                                <a class="dropdown-item" href="{{ path('login')}}">Sign in</a>
                                <a class="dropdown-item" href="{{ path('register')}}">Sign up</a>
                            {% endif %}

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <a class="dropdown-item" href="{{ path('allUser')}}">User</a>
                            {% else %}
                                <a class="dropdown-item" href="{{ path('login')}}">Conference</a>

                            {% endif %}

                        </div>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    {% endblock %}
    {% block tabconference %}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Moyenne</th>
                </tr>
            </thead>
            <tbody>
                {% for conference in conferences %}
                    <tr>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <td><a href="{{ path('seeConference',{'id':conference.id, 'idC':conference.id,'idU': app.user.id}) }}">{{ conference.name }}</a></td>
                        {% else %}
                            <td>{{ conference.name }}</td>
                        {% endif %}
                        <td>{{conference.description}}</td>
                        {% if(conference.moyenne is defined) %}
                            <td>{{conference.moyenne}}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}
{% endblock %}